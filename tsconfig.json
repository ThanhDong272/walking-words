{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@locales/*": ["locales/*"],
      "@generated/*": ["services/network/generated/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@theme": ["theme"],
      "@theme/*": ["theme/*"],
      "@views/*": ["views/*"],
      "@context/*": ["context/*"],
      "@app/*": ["app/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "scripts/gen-icon.js"
  ]
}
